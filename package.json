{
  "name": "amidraw-react",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@types/express": "^4.16.0",
    "@types/socket.io": "^1.4.38",
    "express": "^4.16.4",
    "guid-typescript": "^1.0.7",
    "node-sass-chokidar": "^1.3.3",
    "npm-run-all": "^4.1.3",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "react-scripts-ts": "2.17.0",
    "socket.io": "^2.1.1",
    "ts-node": "^7.0.1"
  },
  "scripts": {
    "build-css": "node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/ --watch --recursive",
    "start-js": "NODE_PATH=src react-scripts-ts start",
    "start": "NODE_PATH=src/ npm-run-all -p watch-css start-js",
    "start-server": "npx tsc ./src/server/Index.ts --outdir build && node ./build/Index.js",
    "build-js": "NODE_PATH=src/ react-scripts-ts build",
    "build": "NODE_PATH=src/ npm-run-all build-css build-js",
    "test": "react-scripts-ts test --env=jsdom",
    "eject": "react-scripts-ts eject"
  },
  "devDependencies": {
    "@types/jest": "^23.3.2",
    "@types/node": "^10.12.0",
    "@types/react": "^16.4.14",
    "@types/react-dom": "^16.0.7",
    "typescript": "^3.0.3"
  }
}
